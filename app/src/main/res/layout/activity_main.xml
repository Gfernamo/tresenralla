<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tres en ralla"
        android:gravity="top|center"
        android:textSize="50sp"
        android:layout_margin="10dp"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/b2"
        android:src="@drawable/quadre"
        android:background="@null" />
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/b2"
        android:layout_alignBottom="@id/b2"
        android:id="@+id/b3"
        android:src="@drawable/quadre"
        android:background="@null"
        android:layout_marginLeft="15dp"/>

    <ImageButton
        android:id="@+id/a2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/b2"
        android:layout_alignLeft="@id/b2"
        android:layout_marginBottom="15dp"
        android:background="@null"
        android:src="@drawable/quadre" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/b3"
        android:layout_alignLeft="@id/b3"
        android:id="@+id/a3"
        android:src="@drawable/quadre"
        android:background="@null"
        android:layout_marginBottom="15dp"/>

    <ImageButton
        android:id="@+id/c3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/b3"
        android:layout_alignLeft="@id/b3"
        android:src="@drawable/quadre"
        android:background="@null"
        android:layout_marginTop="15dp"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/b2"
        android:layout_alignLeft="@id/b2"
        android:id="@+id/c2"
        android:src="@drawable/quadre"
        android:background="@null"
        android:layout_marginTop="15dp"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/b2"
        android:layout_alignBottom="@id/b2"
        android:id="@+id/b1"
        android:src="@drawable/quadre"
        android:background="@null"
        android:layout_marginRight="15dp"/>

    <ImageButton
        android:id="@+id/c1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/b1"
        android:layout_alignLeft="@id/b1"
        android:src="@drawable/quadre"
        android:background="@null"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"/>

    <ImageButton
        android:id="@+id/a1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/b1"
        android:layout_alignLeft="@id/b1"
        android:src="@drawable/quadre"
        android:background="@null"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"/>
    <!--<Button
        android:id="@+id/reinicia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/c2"
        android:text="Reiniciar Joc"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/circulo"
        android:onClick="mostrarAlert"
        />-->
</RelativeLayout>